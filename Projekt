using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Projektnr1
{
    class Program
    {
        static void Main(string[] args)
        {
            float a, b, c;
            float Delta, X1, X2, X1i2;
            Console.WriteLine("Program wyznacza pierwiastki równania kwadratowego");
            do
            {
                Console.WriteLine("Wprowadź współczynnik a: ");
                a = Convert.ToSingle(Console.ReadLine());
                if (a == 0.0f)
                {
                    Console.WriteLine("Error: Błąd w dnaych wejściowych ");
                    Console.WriteLine("Współczynnik a nie może być równy zero");
                    Console.WriteLine("Naciśnij dowolny klawisz ... ");
                    Console.ReadKey();

                }
            } while (a == 0.0f);
            Console.WriteLine("Wprowadź współczynnik b: ");
            b = Convert.ToSingle(Console.ReadLine());
            Console.WriteLine("Wprowadź współczynnik c: ");
            c = Convert.ToSingle(Console.ReadLine());
            Delta = b * b - 4.0f * a * c;
            if (Delta > 0.0f)
            {
                X1 = (-b - (float)Math.Sqrt(Delta)) / (2.0f * a);
                X2 = (-b + (float)Math.Sqrt(Delta)) / (2.0f * a);
                Console.WriteLine("Równanie ma dwa pierwiastki rzeczywiste: ");
                    Console.WriteLine("X1 = {0} \t X2 = {1} \t Delta = {2}", X1, X2, Delta);
            }
            else if (Delta < 0.0f)
                Console.WriteLine("Równanie nie ma pierwiastków rzeczywistych");
            else
            {
                X1i2 = -b / (2.0f * a);
                Console.WriteLine("Równanie ma jeden pierwiastek podwójny");
                Console.WriteLine("X1i2 = {0}",X1i2);
                Console.WriteLine("Delta = {0}", Delta);


            }
            Console.WriteLine("Naciśnij dowolny klawisz");
            Console.ReadKey();
        }
    }
}
