using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Suma
{
    class Program
    {
        static void Main(string[] args)
        {
            float a, b; // deklarowanie zmiennych
            float Suma; // deklarowanie zmiennych    
            {
                Console.Write("\nPodaj pierwszą liczbę: "); // Prośba o wypisanie pierwszej liczby
                while (!float.TryParse(Console.ReadLine(), out a)) // sprawdzanie czy wprowadzony znak jest liczbą rzeczywistą
                {
                    Console.Write("Wystąpił niedozwolony znak, "); // Komunikat o niedozwolonym znaku
                    Console.WriteLine("Podaj ponownie pierwszą liczbę: "); // Prośba o ponowne podanie liczby
                }
                Console.Write("\nPodaj drugą liczbę: "); // Prośba o wypisanie drugiej liczby
                while (!float.TryParse(Console.ReadLine(), out b)) // sprawdzanie czy wprowadzony znak jest liczbą rzeczywistą
                {
                    Console.Write("Wystąpił niedozwolony znak, "); // Komunikat o niedozwolonym znaku
                    Console.WriteLine("Podaj ponownie drugą liczbę: "); // Prośba o ponowne podanie liczby
                }
                Suma = a + b; // Wynik sumy
                Console.WriteLine("\nSuma = {0}", Suma); // Wyświetlanie sumy
                Console.WriteLine("Aby zakończyć program naciśnij dowolny klawisz");
                Console.ReadKey();
            }

        }
    }
}
